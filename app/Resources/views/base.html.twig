<!DOCTYPE html>
<html lang="{{ lang|default('ru') }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title 'Axioma' %}</title>

  {% block stylesheets %}
    {% stylesheets
      '@bootstrap_css'
      '@app_css' %}
      <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
  {% endblock stylesheets %}

  {% block javascripts %}
    {% javascripts
    '@jquery'
    '@bootstrap_js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
  {% endblock javascripts %}
</head>
<body>

{% block navbar %}
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Books&Movies</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li{% if app.request.get('_route') == 'books_index' %} class="active"{% endif %}>
            <a href="{{ path('books_index') }}">{{ 'menu.books'|trans }}</a>
          </li>
          <li{% if app.request.get('_route') == 'movies_index' %} class="active"{% endif %}>
            <a href="{{ path('movies_index') }}">{{ 'menu.movies'|trans }}</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endblock navbar %}

<div class="container">
  {% block body '' %}
</div>
</body>
</html>
